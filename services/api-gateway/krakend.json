{
    "$schema": "https://www.krakend.io/schema/v2.5/krakend.json",
    "version": 3,
    "name": "SOA Video Streaming API Gateway",
    "timeout": "30s",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "port": 8080,
    "extra_config": {
        "security/cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ],
            "allow_headers": [
                "Origin",
                "Authorization",
                "Content-Type"
            ],
            "expose_headers": [
                "Content-Length"
            ],
            "max_age": "12h",
            "allow_credentials": false
        }
    },
    "endpoints": [
        {
            "endpoint": "/api/v1/auth/sign-in",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/v1/auth/sign-in",
                    "encoding": "json",
                    "method": "POST",
                    "host": [
                        "http://user-service:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/v1/auth/sign-up",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/v1/auth/sign-up",
                    "encoding": "json",
                    "method": "POST",
                    "host": [
                        "http://user-service:8080"
                    ]
                }
            ]
        },
        {
            "endpoint": "/api/v1/users/preferences/categories",
            "method": "POST",
            "output_encoding": "json",
            "extra_config": {
                "auth/validator": {
                    "alg": "HS256",
                    "jwk_local_path": "/etc/krakend/jwk.json",
                    "disable_jwk_security": true,
                    "propagate_claims": [
                        [
                            "user_id",
                            "x-user-id"
                        ]
                    ]
                }
            },
            "backend": [
                {
                    "url_pattern": "/api/v1/users/preferences/categories",
                    "encoding": "json",
                    "method": "POST",
                    "host": [
                        "http://user-service:8080"
                    ]
                }
            ]
        },
        {
